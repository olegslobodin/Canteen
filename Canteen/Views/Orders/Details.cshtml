@model Canteen.Models.Order

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        @if (User.IsInRole("Admin"))
        {
            <dt>
                @Html.DisplayNameFor(model => model.AspNetUser.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AspNetUser.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AspNetUser.LastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AspNetUser.LastName)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Dishes)
        </dt>

        @foreach (var dish in Model.Dishes)
        {
            <dd>
                @Html.ActionLink(dish.Title, "Details", "Dishes", new { id = dish.Id }, null)
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
